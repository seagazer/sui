<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.seagazer.lib.widget.CameraStudyView
        android:id="@+id/camera_view"
        android:layout_width="300dp"
        android:layout_height="169dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_translate_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translateX"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_view" />

    <SeekBar
        android:id="@+id/translate_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/title_translate_x" />

    <TextView
        android:id="@+id/title_translate_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translateY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translate_x" />

    <SeekBar
        android:id="@+id/translate_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/title_translate_y" />

    <TextView
        android:id="@+id/title_translate_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="translateZ"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translate_y" />

    <SeekBar
        android:id="@+id/translate_z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/title_translate_z" />

    <TextView
        android:id="@+id/title_rotate_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rotateX"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translate_z" />

    <SeekBar
        android:id="@+id/rotate_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/title_rotate_x" />

    <TextView
        android:id="@+id/title_rotate_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rotateY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rotate_x" />

    <SeekBar
        android:id="@+id/rotate_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/title_rotate_y" />

    <TextView
        android:id="@+id/title_rotate_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rotateZ"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rotate_y" />

    <SeekBar
        android:id="@+id/rotate_z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/title_rotate_z" />

</androidx.constraintlayout.widget.ConstraintLayout>
